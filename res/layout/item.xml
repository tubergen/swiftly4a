<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <!--
    <TextView
            android:id="@+id/item_name"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:gravity="center"/>
    -->

    <!--
    <TextView
            android:id="@+id/item_price"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:gravity="center" />
    -->

    <Button
            android:id="@+id/add_to_cart"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text="@string/add_to_cart"
            android:gravity="center"
            android:visibility="gone"
            android:layout_alignParentBottom="true"/>

    <!--  All for the image and its text -->
    <com.makeramen.rounded.RoundedImageView
        xmlns:makeramen="http://schemas.android.com/apk/res/com.swiftly.android"
        android:id="@+id/item_img"
        android:scaleType="centerCrop"
        makeramen:corner_radius="60dp"
        makeramen:border_width="2dp"
        makeramen:border_color="#BBBBBB"
        makeramen:round_background="true"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:layout_gravity="center_horizontal"
        android:layout_above="@+id/add_to_cart"
        android:padding="25dp"/>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="36dp"
        android:layout_marginRight="36dp"
        android:layout_alignBottom="@+id/item_img"
        android:layout_alignRight="@+id/item_img"
        android:background="#7f000000"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/item_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView3"
        android:layout_alignRight="@+id/textView3"
        android:layout_marginBottom="4dp"
        android:background="#7f000000"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/item_price"
        android:layout_alignRight="@+id/item_price"
        android:layout_marginBottom="4dp"
        android:background="#7f000000"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:textAppearance="?android:attr/textAppearanceLarge" />
    <!--  End image -->

</RelativeLayout>